{% extends 'base.html.twig' %}

{% block title %}Admin
{% endblock %}

{% block body %}
	{% block navAdmin %}
		<h1>Administration</h1>

		<div class="uk-width-1-2@s uk-width-2-5@m">
			<ul class="uk-nav uk-nav-default">
				<li class="uk-active">
					<a href="register">Collaborateurs</a>
				</li>
				<li class="uk-active">
					<a href="typeTraining">Catégories</a>
				</li>
				<li class="uk-active">
					<a href="training">Formations</a>
				</li>
				<li class="uk-active">
					<a href="session">Sessions</a>
				</li>
				<li class="uk-active">
					<a href="module">Modules</a>
				</li>
				<li class="uk-active">
					<a href="location">Lieux</a>
				</li>
			</div>
		</nav>
	{% endblock %}

	<h1>Ajouter une session</h1>
	{{ form(formSession) }}

		<h3>Liste des sessions</h3>
		<table class='uk-table uk-table-hover uk-table-divider'>
			<thead>
				<tr>
					<th>Session</th>
					<th>Lieu</th>
					<th>Date début</th>
					<th>Date fin</th>
					<th>Nb Stagiaire</th>
					<th>MIN Stagiaire</th>
					<th>MAX Stagiaire</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for session in sessions %}
					<tr>
						<td>{{ session.title }}</td>
						<td>{{ session.location.adress }}</td>
						<td>{{ session.startDate | date('d/m/Y') }}</td>
						<td>{{ session.endDate | date('d/m/Y')}}</td>
						<td>{{ session.trainees|length }}</td>
						<td>{{ session.minimumTrainees }}</td>
						<td>{{ session.maximumTrainees }}</td>
						<td>
							<!-- https://getuikit.com/docs/icon -->
							<a class="uk-icon-link uk-margin-small-right" uk-icon="file-edit" href="#"></a>
							<a class="uk-icon-link" uk-icon="trash" href=""></a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}
