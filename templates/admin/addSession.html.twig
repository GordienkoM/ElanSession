{% extends 'base.html.twig' %}

{% block title %}Admin
{% endblock %}

{% block body %}
	<h1>Ajouter une session</h1>
	{{ form(formSession) }}

		<h3>Liste des sessions</h3>
		<table class='uk-table uk-table-hover uk-table-divider'>
			<thead>
				<tr>
					<th>Session</th>
					<th>Lieu</th>
					<th>Date d√©but</th>
					<th>Date fin</th>
					<th>Nb Stagiaire</th>
					<th>MIN Stagiaire</th>
					<th>MAX Stagiaire</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for session in sessions %}
					<tr>
						<td>{{ session.title }}</td>
						<td>{{ session.location.adress }}</td>
						<td>{{ session.startDate | date('d/m/Y') }}</td>
						<td>{{ session.endDate | date('d/m/Y')}}</td>
						<td>{{ session.trainees|length }}</td>
						<td>{{ session.minimumTrainees }}</td>
						<td>{{ session.maximumTrainees }}</td>
						<td>
							<!-- https://getuikit.com/docs/icon -->
							<a class="uk-icon-link uk-margin-small-right" uk-icon="file-edit" href="{{ path('session_edit', {id:session.id} ) }}"></a>
							<a class="uk-icon-link" uk-icon="trash" href="{{ path('session_suppr', {id:session.id} ) }}"></a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}
