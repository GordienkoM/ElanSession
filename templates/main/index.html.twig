{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}


<h3>Les 3 prochaines sessions</h3>
<table class='uk-table uk-table-hover uk-table-divider'>
    <thead>
        <tr>
            <th>Session</th>
            <th>Nb de stagiaires inscrit</th>
            <th>Nb de stagiaires minimum</th>
            <th>Nb de stagiaires maximum</th>
            <th>Lieu</th>
            <th>Date de d√©but</th>
            <th>Date de fin</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for session in sessions %}          
            <tr>
                <td>
                    <a href="{{ path('show_session', {id:session.id} ) }}">
                        {{ session.title }}
                    </a>
                </td>
                <td>{{ session.trainees|length }}</td>
                <td>{{ session.minimumTrainees }}</td>
                <td>{{ session.maximumTrainees }}</td>                  
                <td>{{ session.location }}</td>
                <td>{{ session.startDate| date('d/m/Y') }}</td>
                <td>{{ session.endDate| date('d/m/Y') }}</td>
                <td>
                    <!-- https://getuikit.com/docs/icon -->
                    <a class="uk-icon-link uk-margin-small-right" uk-icon="file-edit" href="#"></a>
                    <a class="uk-icon-link" uk-icon="trash" href=""></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div id="home-numbers" class="uk-flex uk-flex-center">
    <div class="uk-card uk-card-default uk-card-body">
        <p class="numbers">{{ nbtrainees }}</p>
        <p>Stagiaires</p>                
    </div>
    <div class="uk-card uk-card-default uk-card-body uk-margin-left">
        <p class="numbers">{{ nblocations }}</p>
        <p>Lieux</p>                    
    </div>
    <div class="uk-card uk-card-default uk-card-body uk-margin-left">
        <p class="numbers">{{ nbsessions }}</p>
        <p>Sessions de formation</p>  
    </div>
</div>

{% endblock %}
